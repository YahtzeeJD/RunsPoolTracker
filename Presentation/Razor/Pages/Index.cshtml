@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">

    <h2>Round 4</h2>

    @{
        var remainingRuns = Model.TeamRunsCollection.ComputeRemainingRunsByTeam();
        foreach (var rr in remainingRuns.OrderBy(x => x.RemainingRuns.Count))
        {
            <span style="margin-right: 10px;">@rr.TeamName.PadRight(12, ' ')</span>
            <span style="margin-right: 10px;">@rr.RemainingRuns.Count</span>
            <span>[@(string.Join(", ", @rr.RemainingRuns))];</span>

            <br />
        }
    }


</div>
